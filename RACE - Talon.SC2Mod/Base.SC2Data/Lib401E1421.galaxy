include "TriggerLibs/NativeLib"

include "Lib401E1421_h"

//--------------------------------------------------------------------------------------------------
// Library: Talon
//--------------------------------------------------------------------------------------------------
// External Library Initialization
void lib401E1421_InitLibraries () {
    libNtve_InitVariables();
}

// Triggers
//--------------------------------------------------------------------------------------------------
// Trigger: Melee Initialization
//--------------------------------------------------------------------------------------------------
bool lib401E1421_gt_MeleeInitialization_Func (bool testConds, bool runActions) {
    // Variable Declarations
    playergroup lv_group;

    // Automatic Variable Declarations
    // Variable Initialization
    lv_group = PlayerGroupEmpty();

    // Actions
    if (!runActions) {
        return true;
    }

    PlayerGroupAdd(lv_group, 1);
    PlayerGroupAdd(lv_group, 2);
    PlayerGroupAdd(lv_group, 3);
    PlayerGroupAdd(lv_group, 4);
    PlayerGroupAdd(lv_group, 5);
    libNtve_gf_PlayerApplySkinReplacingExistingUnit(1, "ProtossTalon", true);
    libNtve_gf_SetPlayerGroupAlliance(lv_group, libNtve_ge_AllianceSetting_AllyWithSharedVisionControlAndSpending);
    PlayerModifyPropertyInt(1, c_playerPropMinerals, c_playerPropOperSetTo, 10000);
    PlayerModifyPropertyInt(1, c_playerPropVespene, c_playerPropOperSetTo, 10000);
    TechTreeUpgradeAddLevel(1, "ProtossTalon", 1);
    TechTreeUpgradeAddLevel(1, "Faction_StarwingSwap", 1);
    TechTreeUpgradeAddLevel(1, "Faction_TiamathBerserkerSwap", 1);
    TechTreeUpgradeAddLevel(1, "HeavyPhotonCannon", 1);
    TechTreeUpgradeAddLevel(1, "Faction_SubjugatorSwap", 1);
    TechTreeUpgradeAddLevel(1, "Faction_ZealotPredatorSwap", 1);
    return true;
}

//--------------------------------------------------------------------------------------------------
void lib401E1421_gt_MeleeInitialization_Init () {
    lib401E1421_gt_MeleeInitialization = TriggerCreate("lib401E1421_gt_MeleeInitialization_Func");
}

void lib401E1421_InitTriggers () {
    lib401E1421_gt_MeleeInitialization_Init();
}

//--------------------------------------------------------------------------------------------------
// Library Initialization
//--------------------------------------------------------------------------------------------------
bool lib401E1421_InitLib_completed = false;

void lib401E1421_InitLib () {
    if (lib401E1421_InitLib_completed) {
        return;
    }

    lib401E1421_InitLib_completed = true;

    lib401E1421_InitLibraries();
    lib401E1421_InitTriggers();
}

