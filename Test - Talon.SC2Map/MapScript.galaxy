bool gt_MeleeInitialization_Func (bool testConds, bool runActions) {
    // Variable Declarations
    playergroup lv_group;

    // Automatic Variable Declarations
    // Variable Initialization
    lv_group = PlayerGroupEmpty();

    // Actions
    if (!runActions) {
        return true;
    }

    PlayerGroupAdd(lv_group, 1);
    PlayerGroupAdd(lv_group, 2);
    PlayerGroupAdd(lv_group, 3);
    PlayerGroupAdd(lv_group, 4);
    PlayerGroupAdd(lv_group, 5);
    TechTreeUpgradeAddLevel(1, "CrystalInfusion", 1);
    libNtve_gf_PlayerApplySkinReplacingExistingUnit(1, "ProtossTalon", true);
    libNtve_gf_PlayerApplySkinReplacingExistingUnit(2, "ProtossTalon", true);
    libNtve_gf_PlayerApplySkinReplacingExistingUnit(3, "ProtossTalon", true);
    libNtve_gf_PlayerApplySkinReplacingExistingUnit(4, "ProtossTalon", true);
    PlayerApplySkin(2, "ProtossTalon", true);
    PlayerApplySkin(3, "ProtossTalon", true);
    PlayerApplySkin(4, "ProtossTalon", true);
    libNtve_gf_SetPlayerGroupAlliance(lv_group, libNtve_ge_AllianceSetting_AllyWithSharedVisionControlAndSpending);
    PlayerModifyPropertyInt(1, c_playerPropMinerals, c_playerPropOperSetTo, 10000);
    PlayerModifyPropertyInt(1, c_playerPropVespene, c_playerPropOperSetTo, 10000);
    TechTreeUpgradeAddLevel(1, "ProtossTalon", 1);
    TechTreeUpgradeAddLevel(2, "ProtossTalon", 1);
    TechTreeUpgradeAddLevel(3, "ProtossTalon", 1);
    TechTreeUpgradeAddLevel(4, "ProtossTalon", 1);
    TechTreeUpgradeAddLevel(1, "Faction_Biocrafters", 1);
    TechTreeUpgradeAddLevel(2, "Faction_TheSilentSwap", 1);
    TechTreeUpgradeAddLevel(2, "Faction_PacifierSwap", 1);
    TechTreeUpgradeAddLevel(2, "Faction_CrusaderSwap", 1);
    TechTreeUpgradeAddLevel(2, "Faction_StarwingSwap", 1);
    TechTreeUpgradeAddLevel(2, "Faction_CyberInitiative_1", 1);
    TechTreeUpgradeAddLevel(3, "Faction_FirstAssault", 1);
    TechTreeUpgradeAddLevel(4, "Faction_Forgers", 1);
    TechTreeUpgradeAddLevel(4, "Faction_TheForgedSwap", 1);
    TechTreeRestrictionsEnable(1, true);
    TechTreeRequirementsEnable(1, true);
    TechTreeAbilityAllow(1, AbilityCommand("PsionicStormArchon", 0), true);
    TechTreeAbilityAllow(5, AbilityCommand("PsionicStormArchon", 0), false);
    return true;
}

